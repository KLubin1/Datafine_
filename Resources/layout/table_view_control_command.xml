<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

     <TableLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        >
    
    <TableRow
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:divider="@android:drawable/divider_horizontal_dark">
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryEditButton"
                android:src="@drawable/baseline_edit_black_18dp"
                />
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryDeleteButton"
                android:src="@drawable/baseline_delete_sweep_black_18dp"/>
             <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryMoveButton"
                android:src="@drawable/baseline_compare_arrows_black_18dp"/>
            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
     </TableRow>

        <TableRow
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:divider="@android:drawable/divider_horizontal_dark">
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryStarButton"
                android:src="@drawable/baseline_star_outline_black_18dp"
                android:clickable="false"
                />
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryFunc1"
                android:src="@drawable/baseline_help_outline_black_18dp"/>
             <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/entryFunc2"
                android:src="@drawable/baseline_help_outline_black_18dp"/>
            <TextView
                android:layout_height="30px"
                android:layout_width="30px"
                android:id="@+id/textView1" />
            />
        
     </TableRow>
    
   
    </TableLayout>


    

</LinearLayout>


