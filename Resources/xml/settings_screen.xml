<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
    app:title="Theme">

    <Preference
        app:key="color_scheme"
        app:title="Color Scheme"
        android:clickable="false"
        app:summary="Change app's color scheme"/>
    <Preference
        app:key="module"
        app:title="Module"
        android:clickable="false"
        app:summary="Customize app's modules"/>

  </PreferenceCategory>

  <PreferenceCategory
    app:title="Control Table Access">

    <EditTextPreference
       app:key="create_password"
       app:title="Create Password"
       app:summary="Create a password to manage access to table features"/>
    
     <ListPreference
       app:key="set_password"
       app:title="Enable Password"
       app:summary="Enable table access with password"
       app:defaultValue="1"
       app:entryValues="@array/password_settings_values"
       app:entries="@array/password_settings"/>

    <SwitchPreference
        app:key="read_only"
        app:title="Enable Read-Only Table"/>
  </PreferenceCategory>

  <PreferenceCategory app:title="Search">

    <ListPreference
        app:key="search_type"
        app:title="Search Type"
        app:summary="Change search type"
        app:defaultValue="1"
        app:entryValues="@array/search_terms_values"
        app:entries="@array/search_terms"
        
        />

  </PreferenceCategory>
</PreferenceScreen>
